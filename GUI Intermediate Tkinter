import tkinter as tk
from tkinter import *
import sys
import os

class App(object):
    def __init__(self):
        self.root = Tk()
        self.root.wm_title("Question 1")
        self.label = Label(self.root, text= "Enter the number that best fits the following pattern:\n\n1, 2, 3, 5, 8...")
        self.label.pack()

        self.entrytext = StringVar()
        Entry(self.root, textvariable = self.entrytext).pack()

        self.buttontext = StringVar()

        self.buttontext.set("Submit")
        Button(self.root, textvariable=self.buttontext, command=self.clicked1).pack()

        self.label = Label(self.root, text = "")
        self.label.pack()

        self.root.mainloop()

    def clicked1(self):
        inp = self.entrytext.get()
        result = int(inp)
        if (result == 13):
            self.label.configure(text="Correct!")
        else:
            self.label.configure(text="Incorrect.")

    def button_click(self,e):
        pass

App()
